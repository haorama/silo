{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6",
    "resolveJsonModule": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
